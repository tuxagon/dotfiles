// Place your settings in this file to overwrite the default settings
{
    "editor.mouseWheelZoom": true,
    "editor.fontSize": 14,
    "editor.renderWhitespace": "boundary",
    "editor.fontFamily": "'Noto Sans Mono CJK JP Regular', 'Inconsolata', 'Ubuntu Mono', 'Droid Sans Mono', 'Courier New', monospace, 'Droid Sans Fallback'",
    "extensions.autoUpdate": true,
    "ruby.rubocop.executePath": "/usr/local/bin/rubocop/",
    "ruby.rubocop.onSave": true,
    "editor.tabSize": 2,
    "ruby.lint": {
        "rubocop": true,
        "ruby": true
    },
    "elm-format.formatOnSave": true,
    "python.formatting.formatOnSave": true,
    "workbench.iconTheme": "vs-seti",
    "editor.cursorBlinking": "expand",
    "editor.minimap.enabled": true,
    "languageServerCredo.flags": "--strict",
    "go.formatOnSave": true,
    "workbench.colorTheme": "Dracula",
    "vim.incsearch": true,
    "vim.statusBarColorControl": true,
    "vim.statusBarColors": {
        "normal": "#005f5f",
        "insert": "#5f0000",
        "visual": "#5f00af",
        "visualline": "#005f87",
        "visualblock": "#86592d",
        "replace": "#000000"
    },
    "vim.hlsearch": true,
    "vim.surround": true,
    "vim.handleKeys": {
        "<C-a>": false,
        "<C-f>": false,
        "<C-y>": false,
        "<C-x>": false,
        "<C-z>": false,
        "<C-c>": false,
        "<C-p>": false,
        "<C-v>": false
    },
    "vim.otherModesKeyBindingsNonRecursive": [
        {
            "before": ["<C-n>"],
            "after": [],
            "commands": [
                {
                    "command": ":nohl"
                }
            ]
        }
    ],
    "workbench.colorCustomizations": {
        "statusBar.background": "#5f0000",
        "statusBar.noFolderBackground": "#5f0000",
        "statusBar.debuggingBackground": "#5f0000"
    }
}